{
    "name": "hassankhan/config",
    "type": "library",
    "description": "Lightweight configuration file loader that supports PHP, INI, XML, JSON, and YAML files",
    "keywords": ["configuration", "config", "json", "yaml", "yml", "ini", "xml", "unframework", "microphp"],
    "homepage": "https://github.com/ericdraken/config",
    "license": "MIT",
    "authors": [
        {
            "name": "Hassan Khan",
            "role": "Developer",
            "homepage": "http://hassankhan.me/"
        },
        {
            "name": "Eric Draken",
            "role": "Contributor",
            "homepage": "https://ericdraken.com/"
        }
    ],
    "require": {
        "php": "^7.0",
        "symfony/yaml": "~3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.3",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.2"
    },
    "autoload": {
        "psr-4": {
            "Noodlehaus\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Noodlehaus\\Test\\": "tests"
        }
    }
}
